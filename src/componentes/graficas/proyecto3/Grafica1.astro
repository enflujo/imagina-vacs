---
import Colombina from '@/componentes/Colombina.astro';
import datos from '@/datos/p3AgresionSexualEdad'
---

<section id="grafica1" class="grafica">
    <h3>Presuntos delitos sexuales en Colombia 2020 por grupo de edad en menores</h3>
  
    <div>
      <div class="colombinas">
        {
          datos.edad.map((variable) => {
            return (
              <Colombina
                datos={variable}
                resaltado={variable.nombre === "De 10 a 14"}
                color={variable.nombre === "De 10 a 14" ? '#f5ba39d5' : '#000'}
                alto={variable.nombre === "De 10 a 14" ? 12 : 4}
              />
            );
          })
        }
      </div>
    </div>
  <div class="anotacionGrafica">
    {datos.infoIndicador} 
    <a href="https://www.medicinalegal.gov.co/documents/20143/787115/Forensis_2020.pdf">{datos.info}</a>
  </div>
  </section>
  
  <style lang="scss">
    .grafica {
      padding: 3em 0;
    }
    h3 {
      font-size: 1.9em;
    }
    .tituloGrafica {
      font-size: 1.35em;
      margin-top: 1em;
    }
  
    .colombinas {
      margin: 0.5em 0 1em 0;
   
    }
  </style>
  