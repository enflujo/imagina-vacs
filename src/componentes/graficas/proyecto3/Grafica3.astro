---
import Torta from '@/componentes/Torta.astro';
import datos from '@/datos/p3ViolenciaPorGenero';

const colores = ['#f5ba39d5', 'purple'];
---

<section id="grafica1" class="grafica">
  <h3>Violencia contra niños, niñas y adolescentes en Colombia en 2020 por género</h3>

  <div>
    <div class="torta">
      <Torta datos={datos.genero} total={datos.total} colores={colores} anchoGrafica={400} altoGrafica={400} />
    </div>
  </div>
  <div class="anotacionGrafica">
    {datos.infoIndicador}
    <a href="https://www.medicinalegal.gov.co/documents/20143/787115/Forensis_2020.pdf">{datos.info}</a>
  </div>
</section>

<style lang="scss">
  .grafica {
    padding: 3em 0;
  }
  h3 {
    font-size: 1.9em;
  }
  .tituloGrafica {
    font-size: 1.35em;
    margin-top: 1em;
  }

  .torta {
    margin: 0.5em 0 1em 0;
  }
</style>
