---
export interface Props {
  datos: { nombre: string; porcentaje: number };
  color: string;
  alto?: number;
  resaltado?: boolean;
  info?: string;
}

const { datos, color, alto, resaltado, info } = Astro.props;
---

<div class=`${resaltado ? ' resaltado': ''}`>
  <div class="contenedorColombina">
    <p class="nombre">{datos.nombre}</p>
    <div class="elementoGrafica">
      <span class="colombina" style={`width:${datos.porcentaje}%;background-color:${color};height:${alto ? alto : 3}px`}
      ></span>
      <span class="porcentaje">{datos.porcentaje}%</span>
    </div>
  </div>
  {info && <span class="info">{info}</span>}
</div>

<style lang="scss">
  .resaltado {
    background-color: var(--verdeTeVerde);
  }
  .contenedorColombina {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    align-items: center;
  }

  .colombina {
    height: 3px;
    background-color: rgb(68, 68, 26);
    display: block;
    margin-right: 5px;
  }

  .nombre {
    margin: 0;
    flex-basis: 200px;
  }

  .elementoGrafica {
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    align-items: center;
    flex-basis: 100%;
  }

  .resaltado {
    font-size: 1.1em;
    .nombre {
      font-weight: 700;
    }
  }

  .info {
    font-weight: 400;
    font-size: 0.85em;
    flex: 1;
  }
</style>
