<div id="creditos" class="contenido">
  <h2 id="titulo">Cr√©ditos</h2>
</div>

<script>
  const creditos = document.getElementById('creditos');

  // Cerrar el glosario con click afuera
  function clicFuera(evento: MouseEvent) {
    const elemento = evento.target as HTMLElement;

    if (elemento.id === 'botonCreditos') {
      return;
    }

    if (!(creditos === elemento || creditos.contains(elemento))) {
      creditos.classList.remove('visible');
    }
  }

  document.body.addEventListener('click', clicFuera);
</script>

