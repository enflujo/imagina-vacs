    // } else {
    //   mal.style.fontSize = `${window.scrollY / 50 < 20 && window.scrollY / 50 > 1 ? window.scrollY / 50 : 1}em`;
    //   mal.style.backgroundColor = `rgba(0, 0, 0,${opacidad + window.scrollY / 500})`;
    //   mal.style.position = 'absolute';
    //   mal.style.padding = '1em';
    // }
  }

  function agrandarMal(evento, elemento: HTMLElement) {
    let opacidad = 0;

    // console.log(window.scrollY);
    if (window.scrollY === 0) {
      elemento.style.padding = '0em';
      elemento.style.position = 'relative';
      elemento.style.color = 'rgba(224, 169, 222, 1)';
      elemento.style.display = 'none';
    } else {
      const pasoX = window.innerWidth / 1000;
      const pasoY = window.innerHeight / 800;
      elemento.style.padding = '3em';
      elemento.style.backgroundColor = `rgba(0, 0, 0,${opacidad + window.scrollY / 500})`;
      elemento.style.position = 'fixed';
      elemento.style.display = 'block';
      elemento.style.top = '0';
      elemento.style.left = '0';
      elemento.style.width = `${window.scrollY * pasoX}px`;
      elemento.style.height = `${window.scrollY * pasoY}px`;

      if (window.scrollY > 200) {
        elemento.innerText = elemento.dataset.texto;
      } else {
        elemento.innerText = '';
      }

      if (window.scrollY > 1500) {
        elemento.style.display = 'none';
      }
    }
  }
</script>

